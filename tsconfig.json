{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "target": "es2018",
    "baseUrl": "./src",
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "paths": {
    "*": ["src/*"]
  },
  "exclude": ["node_modules"]
}
